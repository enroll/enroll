<div class="navbar navbar-fixed-top">
  <div class="container">
    <div class="row">
      <p class="lead text-right">
        Only $<span class="workshop-cost">50</span>
        <a href="#try" class="btn btn-primary reserve upcase">Reserve your seat</a>
      </p>
    </div>
  </div>
</div>

<%= simple_form_for(@course, :html => {:class => "new_course disable-submit-on-return"}) do |f| %>
  <%= f.error_notification %>

  <div class="jumbotron text-right col-12">
    <div class="col-4"></div>
    <div class="col-8">
      <h1><%= f.input(:name, placeholder: 'YOUR WORKSHOP TITLE HERE', label: false) %></h1>
      <div class="form-element">
        <%= f.input(:tagline, placeholder: 'Your workshop tagline here', label: false) %>
      </div>

      <div class="form-element upcase date-and-time">
        <%= f.input(:course_starts_at, as: :string, placeholder: 'YOUR COURSE START DATE', label: false, input_html: { class: 'datepicker' }) %>
      </div>

      <br/>
      <a href="#try" class="btn btn-primary btn-large reserve upcase">Reserve your seat</a>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="form-element">
          <h2>What is this workshop about?</h2>
          <%= f.input(:description, placeholder: 'Your description here. Tell people a little about the workshop.', label: false, as: :text, input_html: { rows: 3, placeholder: 'Your description here' }) %>
        </div>

        <h2>What will attendees learn?</h2>
        <div class="form-element">
          <%= f.input(:motivation, placeholder: 'Help motivate people to take your course by telling them a little about what they will learn in the course.', label: false, as: :text, input_html: { rows: 3, placeholder: 'Tell people what they will learn' }) %>
        </div>

        <h2>Who this is for?</h2>
        <div class="form-element">
          <%= f.input(:audience, placeholder: 'Your target audience goes here', label: false, as: :text, input_html: { rows: 3 }) %>
        </div>

        <h2>Where</h2>

        <%= f.simple_fields_for(:location_attributes) do |lf| %>
          <address>
            <div class="form-element">
              <%= lf.input(:name, placeholder: 'Your Location Name', label: false) %>
            </div>
            <div class="form-element">
              <%= lf.input(:address, placeholder: 'Your Location Street Address', label: false) %>
            </div>
            <div class="form-element multi">
              <%= lf.input(:city, placeholder: "City", label: false) %>
              <span>,</span>
              <%= lf.input(:state, placeholder: "Your State", label: false) %>
              <span>,</span>
              <%= lf.input(:zip, placeholder: "Zip Code", label: false) %>
            </div>
            <div class="form-element">
              <abbr title="Phone">P:</abbr>
              <%= lf.input(:phone, as: :string, placeholder: "Your Phone Number", label: false) %>
            </div>
          </address>
        <% end %>

      </div>
    </div>

  </div>

  <div class="row-fluid completion">
    <div class="container">
      <div class="row">
        <div class="col col-lg-10 col-sm-12 col-offset-1"</div>
          <h3 class="thats-it text-center"><span class="glyphicon glyphicon-thumbs-up"></span> And that's it!</h3>

          <p class="text-center">You just created a workshop.  What you see above is what potential students will see.</p>

          <p class="text-center"><em>You're almost there!</em>&nbsp; Just a few more steps and you'll be hosting your own workshop.</p>
          <br>
          <br>
          <div class="row calculate">
            <div class="col col-lg-2 col-sm-2 col-offset-2">
              <input id="input-seats" class="input-large" type="text" value="15">
            </div>

            <div class="col col-lg-1 col-sm-2">
              <label class="seats" for="input-seats">seats</label>
            </div>
            <div class="col col-lg-2 col-sm-2 text-center">
              <span class="glyphicon glyphicon-remove times"></span> 
              <span class="dollar">$</span>
            </div>
            <div class="col col-lg-2 col-sm-2">
              <input id="input-cost" class="input-large" type="text" value="50"> 
            </div>
            <div class="col col-lg-3 col-sm-3">
              = <span id="revenue">$750</span>
            </div>
          </div>

          <br>
          <br>
          <div class="row text-center">
            <%= f.button(:submit, 'Host Your Workshop', class: 'btn btn-primary btn-large upcase') %>
          </div>
          <br>
          <br>
        </div>
      </div>
    </div>
  </div>
<% end %>
