<div class="container">
  <div class="row">
    <div class="col-12">
      <%= render 'shared/messages' %>

      <%= simple_form_for(@course, :html => { :class => "edit_course disable-submit-on-return" }) do |f| %>
        <%= f.error_notification %>

        <h1>Edit course details</h1>

        <%= f.input :name %>
        <%= f.input :tagline %>
        <%= f.input :description %>
        <%= f.input :instructor_biography, label: 'Your biography' %>
        <%= f.input :min_seats %>
        <%= f.input :max_seats %>
        <%= f.input :price_per_seat %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
