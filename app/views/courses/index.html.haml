.container
  %h1 My Courses

  .row
    .col-sm-6
      %ul.course-list
        %li.header
          %strong Teaching
          .actions
            %a{:href => new_course_path}
              %i.icon-circled-plus
              Create
        = yrender "courses_list", courses: @courses_teaching do |course|
          = link_to "Manage &rsaquo;".html_safe, dashboard_course_path(course), :class => 'btn btn-primary small'

    .col-sm-6
      %ul.course-list
        %li.header
          %strong Attending
          .actions
            %a{:href => '#'}
              %i.icon-network
              Browse
        = yrender "courses_list", courses: @courses_studying do |course|
          = link_to "Open &rsaquo;".html_safe, landing_page_path(course.url), :class => 'btn btn-primary small'