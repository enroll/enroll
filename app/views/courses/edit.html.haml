.manage-sidebar
  .panel
    .panel-heading
      .progress
        .progress-bar{style: "width: 40%;"}
      .funded-label{style: "margin-left: 40%; width: 50%;"}
        .glyphicon.glyphicon-arrow-up
        Goal
      .row.status-strip
        .col-4
          .quantity 14
          .status-label Enrolled
        .col-4
          .quantity 4
          .status-label Needed
        .col-4
          .quantity 21
          .status-label Days to go
    %div.list-group-flush
      %a.list-group-item{href: "#"}
        %span.glyphicon.glyphicon-home
        Dashboard
      %a.list-group-item{href: "#"}
        %span.glyphicon.glyphicon-user
        %span.badge 14
        Students
      %a.list-group-item.active{href: "#"}
        %span.glyphicon.glyphicon-tags
        Tickets
      %a.list-group-item{href: "#"}
        %span.glyphicon.glyphicon-file
        Landing Page
      %a.list-group-item{href: "#"}
        %span.glyphicon.glyphicon-cog
        Settings

.manage-content
  = render 'layouts/messages'
  .alert
    %button.close{type:"button", "data-dismiss" => "alert"} &times;
    %strong We want to pay you!
    You should
    %a{href: "#"} update your payment settings.
  .row
    .col-6
      .well
        %h3 Students
    .col-6
      .well
        %h3 Revenue
