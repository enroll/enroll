- unless form.object.new_record?
  = form.input :url, as: :string, label: 'Landing page short URL',            |
    hint: 'Your course URL will be: enroll.io/go/', |
    input_html: { pattern: '^[\w-]+$',                                        |
      'ng-model'   => 'data.url',                                             |
      'ng-init'    => 'data.url="' + form.object.url + '"'                    |
    }