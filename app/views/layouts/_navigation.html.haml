%nav.navbar.navbar-static-top.navbar-inverse
  .navbar-inner
    .navbar-header
      %button.navbar-toggle{type:"button", "data-toggle" => "collapse", "data-target" => ".navbar-ex1-collapse"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "enroll", root_path, :class => 'navbar-brand'

    .collapse.navbar-collapse.navbar-ex1-collapse
      - if user_signed_in?
        /= render 'layouts/course_chooser'
        = render 'layouts/settings_menu'
      - else
        %ul#sign-up-or-in.nav.navbar-nav
          %li
            %a.navbar-btn.btn-log-in{href: '#sign-up-or-in', "data-toggle" => "collapse", "data-target" => "#log-in"}
              Log In
          %li
            %a.navbar-btn.btn-sign-up{href: '#sign-up-or-in', "data-toggle" => "collapse", "data-target" => "#sign-up"}
              Sign Up

  #log-in.collapse{class: nav_loginbox_class}
    .container
      .row
        - if flash.alert
          .alert.alert-danger
            %strong Oops!
            = flash.alert

        = simple_form_for(:user, url: session_path(:user), wrapper: "bootstrap-horizontal", html: {class: "form-horizontal"}) do |f|
          = f.input :email, :required => false, :autofocus => true, label_html: { class: 'control-label col-sm-2' }
          = f.input :password, :required => false, label_html: { class: 'control-label col-sm-2' }
          .col-sm-12
            = f.button :submit, "Sign in", class: "btn-primary pull-right"
