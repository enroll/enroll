- if user_signed_in?
  .btn-group.pull-right
    %button.btn.btn-navbar.dropdown-toggle.pull-right{"data-toggle" => "dropdown"}
      = gravatar_for(current_user.email, class: 'img-rounded', size: 30)
      %span.title
        = current_user.display_title
      %span.caret
    %ul.dropdown-menu{role: "menu"}
      %li
        %a{href: "#"}
          %span.glyphicon.glyphicon-usd
          %span Payment Settings
      %li
        %a{href: "#"}
          %span.glyphicon.glyphicon-user
          Personal Info
      %li
        %a{href: destroy_user_session_path, "data-method" => "delete", rel: "nofollow"}
          %span.glyphicon.glyphicon-remove
          Logout
