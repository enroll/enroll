- if user_signed_in?
  %ul#settings-menu.nav.navbar-nav.pull-right
    %li
      %a.navbar-btn.user-dropdown.dropdown-toggle{href: '#', "data-toggle" => "dropdown"}
        = image_tag current_user.avatar.url(:thumb), class: 'img-rounded', width: 20
        %span.title
          = current_user.display_title
        %span.caret
      %ul.dropdown-menu{role: "menu"}
        %li
          %a{href: edit_account_path}
            %span.glyphicon.glyphicon-user
            Personal info
        %li
          %a{href: new_avatar_path}
            %i.icon-camera
            Change photo
        %li
          %a{href: destroy_user_session_path, "data-method" => "delete", rel: "nofollow"}
            %span.glyphicon.glyphicon-remove
            Logout
