.container.course-dashboard
  = render 'header'

  .content.row
    .sidebar.col-sm-4
      = render 'sidebar'        
    .main.col-sm-8
      = simple_form_for([:dashboard, @course], :html => {:class => "course-form form stacked disable-submit-on-return step-#{current_step[:id]}"}) do |form|
        = render "courses/form_header", :form => form
        = render "courses/form_#{current_step[:id]}", :form => form
        .form-actions
          = form.button(:submit, "Save & Next", class: 'btn btn-primary btn-large')
          - if next_step && current_step[:id] != "details"
            = link_to "Skip for now", url_for(step: next_step[:id]), class: 'btn btn-large btn-default'