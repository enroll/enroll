.navbar.navbar-fixed-top
  .container-fluid
    = link_to 'enroll', root_path, :class => 'navbar-brand'
    - if user_signed_in?
      %ul.nav.navbar-nav
        %li
          = link_to 'Manage my course', edit_course_path(current_user.current_course)
    = render 'layouts/settings_menu'

    - unless user_signed_in?
      .btn-group.pull-right
        %button.btn.btn-navbar.btn-log-in{class: "#{flash.alert ? '' : 'collapsed'}", "data-toggle" => "collapse", "data-target" => "#log-in"}
          %span.title Log In
        %button.btn.btn-navbar.btn-sign-up{class: "#{@user.errors.any? || @course.errors.any? ? '' : 'collapsed'}", "data-toggle" => "collapse", "data-target" => "#sign-up"}
          %span.title Sign Up

#sign-up.collapse{class: "#{@user.errors.any? || @course.errors.any? ? 'in' : ''}"}
  .container
    .row
      = simple_form_for(@user, :url => registration_path(:user), :html => {:class => "form-horizontal"}) do |f|
        = f.simple_fields_for @course do |c|
          = c.input :name, required: false, autofocus: true, label: "Course Name",
                    label_html: { class: 'col-lg-2' },
                    input_html: { class: 'course-title-popover' }
          = f.input :email, label_html: { class: 'col-lg-2' }
          = f.input :password, label_html: { class: 'col-lg-2' }
          .row
            .col-lg-11
              = f.button :submit, "Sign Up To Teach", class: "btn-primary pull-right"

#log-in.collapse{class: "#{flash.alert ? 'in' : ''}"}
  .container
    .row
      - if flash.alert
        .alert.alert-danger
          %strong Oops!
          = flash.alert

      = simple_form_for(:user, :url => session_path(:user), :html => {:class => "form-horizontal"}) do |f|
        = f.input :email, :required => false, :autofocus => true, label_html: { class: 'col-lg-2' }
        = f.input :password, :required => false, label_html: { class: 'col-lg-2' }
        .checkbox
          .col-offset-2
            %label
              = f.input_field :remember_me, :as => :boolean
              Remember me
        .row
          .col-lg-11
            = f.button :submit, "Sign in", class: "btn-primary pull-right"


.jumbotron.front-page
  .container
    %h1.logo enroll
    %p You teach.
    %p We take care of the rest.
    %button.btn.btn-primary{"data-toggle" => "collapse", "data-target" => "#sign-up"}
      Sign Up To Teach
%ul
  - Course.all.each do |course|
    %li= link_to course.name, edit_course_path(course)
