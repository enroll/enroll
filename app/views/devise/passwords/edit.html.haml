.container.course-dashboard

  %h1.offset.form-offset Reset password

  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'form' }) do |f|
    .form-offset
      = f.error_notification
    = f.input :reset_password_token, :as => :hidden
    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password, :label => "New password", :required => true, :autofocus => true, input_html: {class: 'medium'}
      = f.input :password_confirmation, :label => "Confirm your new password", :required => true, input_html: {class: 'medium'}
    .form-actions
      = f.button :submit, "Change my password", class: 'btn btn-primary'