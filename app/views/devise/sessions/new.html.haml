.container.course-dashboard
  .row
    %h1.tc.offset Sign in

    = simple_form_for :user, url: session_path(:user), html: {class: 'form'} do |f|
      = f.input :email, required: false, autofocus: true, label: 'E-mail:', input_html: {autocomplete: 'off'}
      = f.input :password, :required => false, label: 'Password:'
      .form-actions
        = f.button :submit, "Sign in", class: 'btn btn-primary'