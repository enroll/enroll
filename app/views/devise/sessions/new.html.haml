.container
  .row
    %h2
      Sign in

    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
      = f.input :email, :required => false, :autofocus => true, label_html: { class: 'col-lg-3' }
      = f.input :password, :required => false, label_html: { class: 'col-lg-3' }
      = f.input :remember_me, :as => :boolean, label_html: { class: 'col-lg-3' } if devise_mapping.rememberable?
      .row
        .col-lg-12
          = f.button :submit, "Sign in", class: "btn-primary pull-right"

    = render "devise/shared/links"
