<div class="container">
  <div class="row">
    <%= form_for(@reservation, :url => course_reservations_path) do |f| %>
      <h2><%= @course.name %></h2>

      <fieldset>
        <legend>Reserve your seat</legend>
        <div class="price">
          1 seat (<%= @course.free? ? 'FREE' : number_to_currency(@course.price_per_seat) %>)
        </div>
        <% unless @course.free? %>
          <script
            src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
            data-key="pk_test_1dGqIW80J3bz620Ylp8FbCLJ"
            data-amount="<%= ((@course.price_per_seat || 0) * 100).to_i %>"
            data-name="<%= @course.name %>"
            data-description="1 seat (<%= number_to_currency(@course.price_per_seat) %>)"
            data-image="/placeholder.png">
          </script>
        <% end %>
      </fieldset>

      <br />

      <fieldset>
        <legend>Complete other details</legend>
        <%= label_tag :detail_1 %>
        <%= text_field_tag :detail_1 %>

        <%= label_tag :detail_2 %>
        <%= text_field_tag :detail_2 %>

        <br />
        <%= f.submit('Confirm reservation', class: 'btn', disabled: !@course.free?) %>
      </fieldset>
    <% end %>
  </div>
</div>
